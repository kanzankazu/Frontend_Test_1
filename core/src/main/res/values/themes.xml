<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/baseWhite</item>
        <item name="android:windowAnimationStyle">@style/BaseTheme.Activity.Animation</item>
    </style>

    <style name="BaseTheme.Activity.Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MaterialCardViewShadowPrimary">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">@dimen/activity_margin_quarter</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/colorPrimary</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/colorPrimary
        </item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="MaterialCardViewShadowAccent">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">@dimen/activity_margin_quarter</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/colorAccent</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/colorAccent
        </item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="MaterialCardViewShadowBlue">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">@dimen/activity_margin_quarter_up</item>
        <item name="cardCornerRadius">@dimen/activity_margin_half</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/baseBlue</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/baseBlue
        </item>
        <item name="rippleColor">@color/baseBlue</item>
    </style>

    <style name="MaterialCardViewShadowBlack">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardElevation">@dimen/activity_margin_quarter</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/baseBlack</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/baseBlack
        </item>
        <item name="rippleColor">@color/baseBlack</item>
    </style>

</resources>